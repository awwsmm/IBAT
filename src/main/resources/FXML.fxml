<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<GridPane
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="watson.FXMLController"
  alignment="center" hgap="10" vgap="10">
  <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

  <Text text="Welcome" GridPane.columnSpan="2"
    GridPane.columnIndex="0" GridPane.rowIndex="0"/>
 
  <Label text="Database Name:"
    GridPane.columnIndex="0" GridPane.rowIndex="1"/>
 
  <TextField fx:id="dbName"
    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
 
  <Label text="Boot Password:"
    GridPane.columnIndex="0" GridPane.rowIndex="2"/>
 
  <PasswordField fx:id="bootPassword"
    GridPane.columnIndex="1" GridPane.rowIndex="2"/>

  <Label text="User Name:"
    GridPane.columnIndex="0" GridPane.rowIndex="3"/>
 
  <TextField fx:id="username"
    GridPane.columnIndex="1" GridPane.rowIndex="3"/>
 
  <Label text="Password:"
    GridPane.columnIndex="0" GridPane.rowIndex="4"/>
 
  <PasswordField fx:id="password"
    GridPane.columnIndex="1" GridPane.rowIndex="4"/>

  <Button text="Log In" fx:id="login" GridPane.columnSpan="2"
    GridPane.columnIndex="0" GridPane.rowIndex="5"
    GridPane.halignment="RIGHT"
    onAction="#loginButton"/>

  <Text fx:id="message" GridPane.columnSpan="2"
    GridPane.columnIndex="0" GridPane.rowIndex="6"
    GridPane.halignment="CENTER"/>

</GridPane>


